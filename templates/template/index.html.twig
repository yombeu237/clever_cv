{% extends 'base.html.twig' %}

{% block title %}Template index{% endblock %}

{% block body %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Type</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.image }}</td>
                <td>{{ template.type }}</td>
                <td>{{ template.prix }}</td>
                <td>
                    <a href="{{ path('app_template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('app_template_edit', {'id': template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_template_new') }}">Create new</a>
{% endblock %}
